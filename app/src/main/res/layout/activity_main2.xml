<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mau_0"
    tools:context=".MainActivity2">
    <ImageView
        android:id="@+id/imageviewBack"
        android:layout_margin="10dp"
        android:src="@drawable/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewTenthanhpho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Tên thành phố"
            android:textColor="@color/mau_5"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/textMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/mau_5"
            android:text="MaxTemp"
            android:textAlignment="textEnd"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/textMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mau_5"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:text="MinTemp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>